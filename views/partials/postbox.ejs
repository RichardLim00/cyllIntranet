<div class="row text-right">
    <div class="card mt-5 mx-auto bg-warning col-md-10 col-10">
        <div class="card-body pb-2">
            <form>
                <div class="row justify-content-between">
                    <!-- Title -->
                    <div class="col-3">
                        <input 
                            class="form-control"
                            type="text" 
                            name="newPostTitle" 
                            id="newPostTitle"
                            placeholder="Title here"
                            autocomplete="off"
                        >
                    </div>
                        
                    <!-- Content -->
                    <div class="col-9">
                        <input 
                            class="form-control"
                            type="text" 
                            name="newPostContent" 
                            id="newPostContent"
                            placeholder="Write Something!"
                            autocomplete="off"
                        >
                    </div>
                </div>
                <button 
                    type="submit"
                    class="btn btn-outline-primary mt-2"
                    id="newPostSubmit"
                    >
                    Post
                </button>
            </form>
        </div>
    </div>
</div>

<script src="/javascripts/createPost.js" type="text/javascript"></script>