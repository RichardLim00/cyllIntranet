<div class="row mt-3">
    <div class="card m-auto col-10">
        <div class="card-title p-2">
            <h4><%= post.title %></h4>
        </div>
        <div class="card-body pb-2 pt-0 pl-2">
            <p><%= post.content %></p>
        </div>
        <hr class="mb-2">
        <div class="card-body p-0 d-flex justify-content-between">
            <div>
                <button class="btn btn-outline-success mb-2 mr-2">
                    <span><%= post.likeAmt %> Love it!</span>
                    <i class="far fa-laugh-wink"></i>
                </button>
                <button class="btn btn-outline-danger mb-2">
                    <span><%= post.hateAmt %> Hate it!</span>
                    <i class="far fa-angry"></i>
                </button>
            </div>
            <div class="align-self-center">
                <h4 class="lead">
                    By - 
                    <a href="/dashboard/profile/<%= post.author._id %>">
                        <%= post.author.username %> 
                    </a>
                </h4>
            </div>
        </div>
    </div>
</div>